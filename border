void print_title() {
	cout << "                  YOUR SCORE: " << "\n";
	for (int i = 0; i < lenght + 2; i++)
		cout << "-";
	cout << "\n";
	for (int i = 0; i < width; i++) {
		for (int j = 0; j < lenght + 2; j++)
			if (j == 0)				cout << "|";
			else if (j == lenght + 1)	cout << "|";
			else 					cout << " ";
		cout << "\n";
	}

	for (int i = 0; i < lenght + 2; i++)
		cout << "-";
}
